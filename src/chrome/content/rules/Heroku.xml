<ruleset name="Heroku">
  <target host="heroku.com" />
  <target host="herokuapp.com" />
  <target host="*.heroku.com" />
  <target host="*.herokuapp.com" />

  <exclusion pattern="^http://mc\.heroku\.com/"/>

  <rule from="^http://heroku\.com/" to="https://heroku.com/"/>
  <rule from="^http://([^/:@\.]+)\.heroku\.com/" to="https://$1.heroku.com/"/>
  <rule from="^http://herokuapp\.com/" to="https://herokuapp.com/"/>
</ruleset>
